{
    "compilerOptions": {
        // main
        "outDir": "dist/js",
        "target": "es5",
        "module": "commonjs",
        // preact configuration
        "jsx": "react",
        "jsxFactory": "h",
        // others:
        "removeComments": true,
        "sourceMap": true,
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx",
    ]
}